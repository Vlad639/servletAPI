<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="MyFile" filename="/tmp/servlet-API.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <logger name="blackWhiteImageServletLogger" level="ALL">
            <AppenderRef ref="MyFile"/>
        </logger>
    </Loggers>
</Configuration>